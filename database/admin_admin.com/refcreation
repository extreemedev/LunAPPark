ALTER TABLE Titolare
ADD CONSTRAINT "dipendente" FOREIGN KEY(idtitolare) REFERENCES Dipendente(cf) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "puntovendita" FOREIGN KEY(tit_punto) REFERENCES PuntoVendita(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Locale
ADD CONSTRAINT "titolare" FOREIGN KEY(locale_dir) REFERENCES Titolare(idtitolare) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "zona" FOREIGN KEY(locale_zona) REFERENCES Zona(numero) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "pulizia" FOREIGN KEY(locale_pul) REFERENCES Pulizia(piva) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Dipendente
ADD CONSTRAINT "puntovendita" FOREIGN KEY(dip_punto) REFERENCES PuntoVendita(id) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "locale" FOREIGN KEY(dip_loc) REFERENCES Locale(id) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "attrazione" FOREIGN KEY(dip_attr) REFERENCES Attrazione(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Attrazione ADD CONSTRAINT "zona" FOREIGN KEY(zona_attr) REFERENCES Zona(numero) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Giostra ADD CONSTRAINT "attrazione" FOREIGN KEY(idgiostra) REFERENCES Attrazione(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Spettacolo ADD CONSTRAINT "attrazione" FOREIGN KEY(idspett) REFERENCES Attrazione(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE PrenotazioneGiostra
ADD CONSTRAINT "utentereg" FOREIGN KEY(pren_cf) REFERENCES UtenteRegistrato(cf) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "giostra" FOREIGN KEY(pren_idgiostra) REFERENCES Giostra(idgiostra) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Shop ADD CONSTRAINT "locale" FOREIGN KEY(idshop) REFERENCES Locale(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Bar ADD CONSTRAINT "locale" FOREIGN KEY(idbar) REFERENCES Locale(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Ristorante ADD CONSTRAINT "locale" FOREIGN KEY(idristorante) REFERENCES Locale(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Bagno
ADD CONSTRAINT "pulizia" FOREIGN KEY(bagno_pul) REFERENCES Pulizia(piva) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "zona" FOREIGN KEY(bagno_zona) REFERENCES Zona(numero) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Revisione
ADD CONSTRAINT "attrazione" FOREIGN KEY(rev_attr) REFERENCES Attrazione(id) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "manutenzione" FOREIGN KEY(rev_man) REFERENCES Manutenzione(piva) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Manutenzione ADD CONSTRAINT "città" FOREIGN KEY(man_città) REFERENCES Città(nome) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Alimenti ADD CONSTRAINT "città" FOREIGN KEY(alim_città) REFERENCES Città(nome) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Articoli ADD CONSTRAINT "città" FOREIGN KEY(art_città) REFERENCES Città(nome) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Pulizia ADD CONSTRAINT "città" FOREIGN KEY(pul_città) REFERENCES Città(nome) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE BigliettoPdf
ADD CONSTRAINT "utentereg" FOREIGN KEY(bigl_utente) REFERENCES UtenteRegistrato(cf) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "biglietteria" FOREIGN KEY(bigl_data) REFERENCES Biglietteria(park_data) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE BigliettoCarta ADD CONSTRAINT "puntovendita" FOREIGN KEY(carta_punto) REFERENCES PuntoVendita(id) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE PrenotazioneHotel
ADD CONSTRAINT "utentereg" FOREIGN KEY(pren_utente) REFERENCES UtenteRegistrato(cf) DEFERRABLE INITIALLY DEFERRED,
ADD CONSTRAINT "hotel" FOREIGN KEY(pren_hotel) REFERENCES Hotel(piva) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Hotel ADD CONSTRAINT "città" FOREIGN KEY(hotel_città) REFERENCES Città(nome) DEFERRABLE INITIALLY DEFERRED;

ALTER TABLE Stanza ADD CONSTRAINT "hotel" FOREIGN KEY(stanza_hotel) REFERENCES Hotel(piva) DEFERRABLE INITIALLY DEFERRED;
